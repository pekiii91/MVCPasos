                @Html.DropDownList("Pasos", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Pasos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kreiraj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Lista korisnika", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
